@model BlocklistAPI.Models.RemoteSite

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>RemoteSite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastDownloaded" class="control-label"></label>
                <input asp-for="LastDownloaded" class="form-control" />
                <span asp-validation-for="LastDownloaded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUrl" class="control-label"></label>
                <input asp-for="SiteUrl" class="form-control" />
                <span asp-validation-for="SiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUrls" class="control-label"></label>
                <input asp-for="FileUrls" class="form-control" />
                <span asp-validation-for="FileUrls" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileTypeID" class="control-label"></label>
                <select asp-for="FileTypeID" class="form-control" asp-items="ViewBag.FileTypeID"></select>
                <span asp-validation-for="FileTypeID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MinimumIntervalMinutes" class="control-label"></label>
                <input asp-for="MinimumIntervalMinutes" class="form-control" />
                <span asp-validation-for="MinimumIntervalMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
